<div class="navbar-container">
  <div class="container d-flex justify-content-between align-items-center">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class: "logo" %>
    <% end %>
    <div class="navbar-search"> <%= render 'shared/search' %></div>
    <div class="links-container">
      <%= link_to "Explore Class", events_path, class: "navbar-link" %>
      <%= link_to "Join Community", "#", class: "navbar-link" %>
      <%= link_to "Partners", "#", class: "navbar-link" %>
    </div>
    <div class="avatar-container">
      <% if user_signed_in? %>

        <div class="dropdown">
          <%= cl_image_tag current_user.avatar, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add New Class", new_event_path, class: "dropdown-item" %>
            <%= link_to "Profile", user_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "My Class", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
        <%= link_to "Register", new_user_registration_path, class: "navbar-link" %>
      <% end %>
    </div>
  </div>
</div>
