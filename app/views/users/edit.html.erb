<div class="devise-profile-card">
  <h2>Edit your profile</h2>

  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :fullname,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "fullname" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :title,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "title" }%>
      <%= f.input :about,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "about" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :expertise,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "expertise" }%>
      <%= f.input :content,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "content" }%>
      <%= f.input :photo, as: :file %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Update Profile", class:"btn btn-color" %>
    </div>
  <% end %>

</div>
